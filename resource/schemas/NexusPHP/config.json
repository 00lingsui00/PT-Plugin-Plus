{
  "name": "NexusPHP",
  "ver": "0.0.1",
  "plugins": [{
    "name": "种子详情页面",
    "pages": ["/details.php", "/plugin_details.php", "\/t-\\d+"],
    "scripts": ["common.js", "details.js"]
  }, {
    "name": "种子列表",
    "pages": ["/torrents.php", "/music.php", "/movie.php", "/adult.php", "/pt"],
    "scripts": ["common.js", "torrents.js"]
  }],
  "securityKeyFields": ["passkey"],
  "searchEntry": [{
    "entry": "/torrents.php?search=$key$&notnewword=1",
    "name": "全部",
    "resultType": "html",
    "parseScriptFile": "/schemas/NexusPHP/getSearchResult.js",
    "resultSelector": "table.torrents:last",
    "enabled": true
  }],
  "checker": {
    "isLogin": {
      "page": "/usercp.php",
      "contains": "logout.php"
    }
  },
  "torrentTagSelectors": [{
    "name": "Free",
    "selector": "img.pro_free, .free_bg, font.free",
    "color": "blue"
  }, {
    "name": "2xFree",
    "selector": "img.pro_free2up, .twoupfree_bg, font.twoupfree",
    "color": "green"
  }, {
    "name": "2xUp",
    "selector": "img.pro_2up, .twoup_bg, font.twoup",
    "color": "lime"
  }, {
    "name": "2x50%",
    "selector": "img.pro_50pctdown2up, .twouphalfdown_bg, font.twouphalfdown",
    "color": "light-green"
  }, {
    "name": "30%",
    "selector": "img.pro_30pctdown, .thirtypercentdown_bg, font.thirtypercent",
    "color": "indigo"
  }, {
    "name": "50%",
    "selector": "img.pro_50pctdown, .halfdown_bg, font.halfdown",
    "color": "orange"
  }],
  "selectors": {
    "userBaseInfo": {
      "page": "/index.php",
      "fields": {
        "id": {
          "selector": "a[href*='userdetails.php']",
          "attribute": "href",
          "filters": ["query.getQueryString('id')"]
        },
        "name": {
          "selector": "a[href*='userdetails.php']"
        }
      }
    },
    "userExtendInfo": {
      "page": "/userdetails.php?id=$userId$",
      "fields": {
        "uploaded": {
          "selector": "td.rowfollow:contains('传输')",
          "filters": ["query.next().text().match(/上[传傳]量.+?([\\d.]+ [TGMK]?i?B)/)"]
        }
      }
    }
  }
}